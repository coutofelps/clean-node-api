  "bugs": {
    "url": "https://github.com/redeok/clean-node-api/issues"
  },
  "homepage": "https://github.com/redeok/clean-node-api#readme",
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "@types/node": "^18.7.6",
    "@types/validator": "^13.7.6",
    "git-commit-msg-linter": "^4.1.3",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "ts-node": "^10.9.1",
    "validator": "^13.7.0"
  }
}
